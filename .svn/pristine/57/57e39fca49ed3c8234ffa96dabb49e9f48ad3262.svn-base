<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroud_color"
    android:orientation="vertical" >

    <com.digione.zgb2b.widget.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:text="@string/product_consult_content" />

    <EditText
        android:id="@+id/product_qcontent_ev"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/multiline_edit_background"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/product_submit_btn"
        style="@style/Button_background"
        android:layout_gravity="right"
        android:layout_margin="10dip"
        android:text="@string/submit" />

</LinearLayout>