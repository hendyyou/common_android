<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <com.digione.zgb2b.widget.TitleView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Gallery
                android:id="@+id/product_detail_gallery"
                android:layout_width="fill_parent"
                android:layout_height="120dip"
                android:background="@drawable/m_0084"
                android:spacing="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_detail_morely"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu_selector"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip" >

                <TextView
                    android:id="@+id/product_gift_tv"
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/orange"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/product_spec_tv"
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_gift_tv"
                    android:layout_marginRight="25dip"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/detail_spec_color"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_spec_tv"
                    android:layout_marginRight="25dip" >

                    <TextView
                        android:id="@+id/product_prov_tvname"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/product_prov_tv"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/clickinto36px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/devider_line2" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical"
            android:paddingBottom="2dip"
            android:paddingTop="2dip" >

            <TextView
                android:id="@+id/product_custprice_tv"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_syscustprice_tv"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/glass_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/product_adviceprice_tv"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_act_ly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/product_actinfo_tv"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/product_actcontent_tv"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="34dip"
                android:layout_gravity="top"
                android:layout_marginBottom="6dip"
                android:layout_marginTop="13.33dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <TextView
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text="@string/product_color"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/color_select_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4dip"
                        android:layout_marginRight="34dip"
                        android:background="@drawable/dropcolor"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/color_select_btn2"
                        android:layout_width="35dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="-35dip"
                        android:layout_toRightOf="@id/color_select_btn"
                        android:background="@drawable/drop_select_background"
                        android:gravity="center" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/product_stock"
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginTop="6dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/product_buycount"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/product_detail_buynum"
                    style="@style/AppBaseTheme"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:background="@drawable/buycount"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:text="1"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/AppBaseTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:gravity="center"
                    android:text="@string/piece"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/product_detail_addcart"
                    style="@style/Button_background"
                    android:layout_width="95dip"
                    android:gravity="center"
                    android:text="@string/cart_add" />

                <TextView
                    android:id="@+id/product_detail_favorites"
                    style="@style/Button_background"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:text="@string/favorites_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>