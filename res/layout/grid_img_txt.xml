<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_img_txt_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/home_remen_top_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#6fffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="27dip" >

        <TextView
            android:id="@+id/grid_img_head_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="@string/hot_zone_title"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <com.digione.zgb2b.widget.MyGridView
        android:id="@+id/grid_img_txt_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="7dip"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dip" >
    </com.digione.zgb2b.widget.MyGridView>

</LinearLayout>