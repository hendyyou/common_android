<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_hotline_rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroud_color" >

    <com.digione.zgb2b.widget.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/more_hotline_logo_iv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hot_line_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_hotline_logo_iv"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/more_hotline_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="@string/customer_hotline_number"
                android:textColor="@color/font_color"
                android:textSize="32sp" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dip" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>