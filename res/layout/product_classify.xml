<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_fg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.digione.zgb2b.widget.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/product_phone_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/classify_headmenu_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/classyfy3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:layout_marginTop="10dip"
            android:text="@string/phone"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="right"
                android:layout_marginRight="13dip"
                android:background="@drawable/clickinto36px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_attachment_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/productlist_menu_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/classyfy2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="10dip"
            android:text="@string/attachment"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="right"
                android:layout_marginRight="13dip"
                android:background="@drawable/clickinto36px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_cloudcard_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/productlist_menu_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/classyfy1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="10dip"
            android:text="@string/cloudcard"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="right"
                android:layout_marginRight="13dip"
                android:background="@drawable/clickinto36px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/backgroud_color"
        android:orientation="vertical" />

</LinearLayout>